<?xml version="1.0" encoding="utf-8"?>                                                
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_checked="false"
        android:drawable="@drawable/shutter_normal" />
    <item android:state_pressed="true" android:state_checked="false"
        android:drawable="@drawable/shutter_pressed" />
    <item android:state_pressed="false" android:state_checked="true"
      android:drawable="@drawable/shutter_checked_normal" />
    <item android:state_pressed="true" android:state_checked="true"
      android:drawable="@drawable/shutter_checked_pressed" />
    <item android:drawable="@drawable/shutter_normal" />
</selector>
